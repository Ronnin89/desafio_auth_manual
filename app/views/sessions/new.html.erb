<h1>Login</h1>

<div class="row">

    <%= form_for(:session, url: sessions_create_path) do |f| %>

    <div class="form_group">
        <%= f.label :email %>
        <%= f.text_field :email %>
    </div>

    <div class="form_group">
        <%= f.label :password %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Guardar", class: "btn btn-primary" %>
    <% end %>

</div>